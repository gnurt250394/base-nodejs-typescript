{
  "name": "DemoService",
  "version": "1.0.0",
  "description": "TypeScript + Mongoose + MongoDB + Express API Server",
  "author": "",
  "license": "ISC",
  "scripts": {
    "prestart": "npm run build",
    "start": "yarn env:prod ts-node -r tsconfig-paths/register --transpile-only src/server.ts",
    "predev": "npm run build",
    "prebuild": "npm run build:tsoa",
    "build": "tsc && npx tsc-alias",
    "dev": "yarn env:dev concurrently \"nodemon\"",
    "swagger": "tsoa spec",
    "test": "jest",
    "build:routes": "tsoa routes",
    "build:swagger": "tsoa swagger --basePath /api/v1",
    "build:tsoa": "yarn clean && yarn build:routes && yarn build:swagger",
    "build:prod": "yarn build:tsoa && tsc && yarn copy",
    "clean": "rm -rf ./dist && rm -rf ./build && mkdir build",
    "copy": "yarn copy:swagger && yarn copy:env",
    "copy:swagger": "cp -R ./build/swagger ./dist/build/swagger",
    "copy:env": "cp -R ./src/config/env ./dist/src/config/env",
    "env:dev": "cross-env NODE_ENV=development",
    "env:test": "cross-env NODE_ENV=test",
    "env:prod": "cross-env NODE_ENV=production",
    "migrate:dev": "yarn env:dev cross-env MIGRATION_DIRECTION=up cross-env MIGRATION_ACTION=migrations ts-node ./src/setup/migrateSql.ts --exit",
    "migrate:undo:dev": "yarn env:dev cross-env MIGRATION_DIRECTION=down MIGRATION_ACTION=migrations ts-node ./src/setup/migrateSql.ts --exit",
    "migrate:prod": "yarn env:prod cross-env MIGRATION_DIRECTION=up MIGRATION_ACTION=migrations ts-node ./src/setup/migrateSql.ts --exit",
    "migrate:undo:prod": "yarn env:prod cross-env MIGRATION_DIRECTION=down MIGRATION_ACTION=migrations ts-node ./src/setup/migrateSql.ts --exit",
    "seed:sql:dev": "yarn env:dev cross-env MIGRATION_DIRECTION=up cross-env MIGRATION_ACTION=sql-seeders ts-node ./src/setup/migrateSql.ts --exit",
    "seed:sql:undo:dev": "yarn env:dev cross-env MIGRATION_DIRECTION=down cross-env MIGRATION_ACTION=sql-seeders ts-node ./src/setup/migrateSql.ts --exit",
    "seed:sql:prod": "yarn env:prod cross-env MIGRATION_DIRECTION=up cross-env MIGRATION_ACTION=sql-seeders ts-node ./src/setup/migrateSql.ts --exit",
    "seed:sql:undo:prod": "yarn env:prod cross-env MIGRATION_DIRECTION=down cross-env MIGRATION_ACTION=sql-seeders ts-node ./src/setup/migrateSql.ts --exit",
    "seed:mongo:dev": "yarn env:dev ts-node ./src/setup/seedMongo.ts --exit",
    "seed:mongo:prod": "yarn env:prod ts-node ./src/setup/seedMongo.ts --exit"
  },
  "dependencies": {
    "agendash": "^2.1.1",
    "bcrypt": "^5.0.1",
    "bcrypt-nodejs": "^0.0.3",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "concurrently": "^6.2.0",
    "config": "^3.3.6",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "envalid": "^7.1.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.9.0",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "inversify": "^5.1.1",
    "inversify-binding-decorators": "3.2.0",
    "jest": "^27.0.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.1",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.6.5",
    "swagger-jsdoc": "^6.0.0",
    "swagger-ui-express": "^4.1.6",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "tsoa": "^3.8.0",
    "typescript": "^4.3.4",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.0",
    "@types/config": "^0.0.38",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.12",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.1",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/mongoose": "^5.10.1",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.12.4",
    "@types/supertest": "^2.0.11",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "node-config": "^0.0.2",
    "node-gyp": "^8.1.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "supertest": "^6.1.3",
    "tsconfig-paths": "^3.9.0"
  }
}
